# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
API_VERSION=v1
BASE_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=social_media_manager
DB_NAME_TEST=social_media_manager_test
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_STATEMENT_TIMEOUT=10000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# Test Redis (separate database for testing)
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# =============================================================================
# API RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Disable rate limiting in development/testing
DISABLE_RATE_LIMITING=false

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:3000

# External API Configuration
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key

# FAL.ai (Image Generation)
FAL_API_KEY=your-fal-api-key

# Social Media API Keys
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_FILE_ERROR=logs/error.log
LOG_FILE_COMBINED=logs/combined.log
LOG_FORMAT=json

# =============================================================================
# MONITORING & PERFORMANCE
# =============================================================================
# Performance monitoring
PERFORMANCE_MONITORING=true
SLOW_REQUEST_THRESHOLD=1000
VERY_SLOW_REQUEST_THRESHOLD=5000

# Business metrics collection
BUSINESS_METRICS=true
METRICS_RETENTION_DAYS=30

# Database monitoring
DATABASE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test Database
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=social_media_manager_test
TEST_DB_USER=postgres
TEST_DB_PASSWORD=password

# Test Database URL (for E2E tests)
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/social_media_manager_test

# E2E Testing
E2E_BASE_URL=http://localhost:3000
E2E_TIMEOUT=30000

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# API Documentation
SWAGGER_ENABLED=true

# Debug mode (enables additional logging and error details)
DEBUG=false

# Hot reload for development
HOT_RELOAD=true

# Task Scheduling
CRON_ANALYTICS_COLLECTION="0 */6 * * *"
CRON_STRATEGY_OPTIMIZATION="0 2 * * *"
CRON_TOKEN_REFRESH="0 */4 * * *"

# Web Scraping Configuration
SCRAPING_TIMEOUT=30000
SCRAPING_REQUESTS_PER_MINUTE=10
SCRAPING_REQUESTS_PER_HOUR=100
SCRAPING_DELAY_BETWEEN_REQUESTS=2000
SCRAPING_MAX_RETRIES=3
SCRAPING_BASE_DELAY=1000
SCRAPING_MAX_DELAY=30000
SCRAPING_BACKOFF_MULTIPLIER=2

# Proxy Configuration (optional)
# PROXY_1_HOST=proxy1.example.com
# PROXY_1_PORT=8080
# PROXY_1_PROTOCOL=http
# PROXY_1_USERNAME=username
# PROXY_1_PASSWORD=password
# PROXY_2_HOST=proxy2.example.com
# PROXY_2_PORT=8080
# PROXY_2_PROTOCOL=http