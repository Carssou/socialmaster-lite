# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=socialmaster_lite
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# LLM CONFIGURATION (AI Insights Generation)
# =============================================================================
# Choose your LLM provider: "openai" or "anthropic"
LLM_PROVIDER=anthropic

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-5-mini

# Anthropic Configuration (if using Anthropic)
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# =============================================================================
# APIFY CONFIGURATION (Instagram Data Collection)
# =============================================================================
APIFY_API_TOKEN=your-apify-api-token
APIFY_INSTAGRAM_ACTOR=shu8hvrXbJbY3Eb9W

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info

# =============================================================================
# APPLICATION TIMING & CACHING CONFIGURATION
# =============================================================================
# AI Insights caching periods (in hours)
AI_INSIGHTS_CACHE_HOURS=168               # 7 days for automatic generation
AI_INSIGHTS_USER_REQUEST_CACHE_HOURS=48   # 2 days for user-requested generation

# Data processing and retention
RECENT_DATA_THRESHOLD_HOURS=12             # Hours to consider data as "recent"
AI_INSIGHT_VALIDITY_DAYS=60                # Days before insights expire
APIFY_DATA_PROCESSING_DELAY_MS=60000       # Delay in milliseconds for Apify processing

# UI behavior
NEW_INSIGHT_THRESHOLD_DAYS=7               # Days to mark insights as "new" in UI

# =============================================================================
# API LIMITS & BATCH PROCESSING
# =============================================================================
# Default limits for API responses
DEFAULT_ACCOUNT_METRICS_LIMIT=10
DEFAULT_POST_METRICS_LIMIT=20
DEFAULT_USER_INSIGHTS_LIMIT=20
DEFAULT_ACCOUNT_INSIGHTS_LIMIT=10

# Batch processing limits
MAX_POSTS_FOR_ANALYSIS=250
SUPPORTING_DATA_ACCOUNT_METRICS_LIMIT=5
SUPPORTING_DATA_POST_METRICS_LIMIT=10

# =============================================================================
# DATABASE CONFIGURATION TUNING
# =============================================================================
# Database operation batch sizes
DB_BATCH_INSERT_SIZE=100
DB_MAX_QUERY_PARAMETERS=50

# =============================================================================
# APIFY CONFIGURATION OVERRIDES
# =============================================================================
# Override default Apify actor settings
# APIFY_DEFAULT_RESULTS_TYPE=details
# APIFY_DEFAULT_RESULTS_LIMIT=1
# APIFY_DEFAULT_SEARCH_TYPE=user
# APIFY_DEFAULT_SEARCH_LIMIT=250
# APIFY_DEFAULT_ADD_PARENT_DATA=false

# =============================================================================
# LLM FINE-TUNING PARAMETERS
# =============================================================================
# Override LLM generation parameters
# LLM_MAX_TOKENS=2000
# LLM_TEMPERATURE=0.3

# =============================================================================
# VALIDATION LIMITS
# =============================================================================
# Override input validation limits (use Instagram limits as defaults)
# MAX_USERNAME_LENGTH=30
# MAX_CAPTION_LENGTH=2200
# MAX_BIO_LENGTH=150
# MAX_HASHTAGS_PER_POST=30
# MAX_MENTIONS_PER_POST=20